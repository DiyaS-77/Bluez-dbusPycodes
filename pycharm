cd ~/Downloads
tar -xzf pycharm-*.tar.gz


cd pycharm-*/bin

./pycharm.sh

nano ~/.local/share/applications/pycharm.desktop

[Desktop Entry]
Version=1.0
Type=Application
Name=PyCharm
